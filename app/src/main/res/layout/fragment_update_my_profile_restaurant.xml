<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragment.Restaurant.UpdateMyProfileRestaurant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/amarante"
                android:gravity="center"
                android:padding="10dp"
                android:text="Restuarant"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="50sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:foregroundGravity="center_horizontal"
                android:src="@drawable/ic_baseline_person_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </de.hdodenhof.circleimageview.CircleImageView>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="32dp"
                android:minHeight="48dp"
                android:src="@android:drawable/ic_menu_add"></ImageButton>

            <EditText
                android:id="@+id/Res_Name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:hint="Enter Restuarant Name"
                android:inputType="textLongMessage"
                android:padding="10dp"
                tools:ignore="InvalidId" />

            <EditText
                android:id="@+id/Res_Mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:hint="Enter Mobile No."
                android:inputType="phone"
                android:padding="10dp" />

            <EditText
                android:id="@+id/Res_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:hint="Enter Email"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/secondary"
                >

                <EditText
                    android:id="@+id/Res_Password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/input_bg"
                    android:gravity="center"
                    android:hint="Enter Old Password"
                    android:inputType="textPassword"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/Res_New_Password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/input_bg"
                    android:gravity="center"
                    android:hint="Enter New Password"
                    android:inputType="textPassword"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/Res_ConformPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/input_bg"
                    android:gravity="center"
                    android:hint="Enter Conform Password"
                    android:inputType="textPassword"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/Conform_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/input_bg"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Conform" />

            </LinearLayout>

            <EditText
                android:id="@+id/Res_Open_Time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:hint="Enter Opening Time"
                android:inputType="time"
                android:padding="10dp" />

            <EditText
                android:id="@+id/Res_Close_Time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:hint="Enter Closing Time"
                android:inputType="time"
                android:padding="10dp" />


            <EditText
                android:id="@+id/Res_State"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:hint="Enter State"
                android:inputType="textLongMessage"
                android:padding="10dp" />

            <EditText
                android:id="@+id/Res_district"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:hint="Enter District"
                android:padding="10dp" />

            <EditText
                android:id="@+id/Res_city"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:hint="Enter City"
                android:padding="10dp" />

            <EditText
                android:id="@+id/Res_Address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:hint="Enter Address"
                android:inputType="textLongMessage"
                android:padding="10dp" />

            <Button
                android:id="@+id/Update_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="Update" />
        </LinearLayout>
    </ScrollView>
